{
  "name": "rvbd-modules-build",
  "version": "0.0.1",
  "description": "Builds all the registered shared modules",
  "author": "Adrian Furculita",
  "license": "MIT",
  "scripts": {
    "build": "node build.js --key-path rvbd.modules"
  },
  "dependencies": {
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "dependency-graph": "^0.7.2",
    "find-package-json": "^1.1.0",
    "typy": "^2.0.1",
    "winston": "^3.1.0"
  },
  "rvbd": {
    "modules": {
      "sample": {
        "path": "/sample",
        "provisionCommand": "yarn install && yarn run build"
      },
      "sample2": {
        "path": "/sample2/sample",
        "provisionCommand": "yarn install && yarn run build",
        "dependsOn": [
          "sample"
        ]
      }
    }
  }
}
