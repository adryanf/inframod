{
  "name": "infrastructure-modules",
  "version": "0.0.1",
  "description": "Provisions all the registered modules",
  "author": "Adrian Furculita",
  "license": "MIT",
  "scripts": {
    "build": "provision-modules --key-path infrastructure.modules"
  },
  "dependencies": {
    "inframod": "^1.0.2"
  },
  "infrastructure": {
    "modules": {
      "foo": {
        "path": "/foo",
        "provisionCommand": "yarn install && yarn run build"
      },
      "bar": {
        "path": "/bar/bar",
        "provisionCommand": "yarn install && yarn run build",
        "dependsOn": [
          "foo"
        ]
      }
    }
  }
}
